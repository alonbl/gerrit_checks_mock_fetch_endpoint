#!/bin/sh

set -e

case "$1" in
	configure)
		adduser \
			--disabled-password \
			--quiet \
			--system \
			--home /var/lib/avahi-autoipd \
			--gecos "Gerrit Checks Mock Fetch Endpoint" \
			--group \
			gerrit-checks-mock-fe
		;;
	abort-upgrade|abort-remove|abort-deconfigure)
		;;
	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
		;;
esac

